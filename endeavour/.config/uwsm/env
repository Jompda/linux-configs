
# src: https://wiki.hyprland.org/Configuring/Environment-variables/

source $HOME/.env

# Toolkit backends
export GDK_BACKEND=wayland
# Easy Anti Cheat doesn't like this
#export SDL_VIDEODRIVER=wayland
export CLUTTER_BACKEND=wayland

# XDG
export XDG_CURRENT_DESKTOP=Hyprland
export XDG_SESSION_DESKTOP=Hyprland
export XDG_SESSION_TYPE=wayland

# Qt
export QT_AUTO_SCREEN_SCALE_FACTOR=1
export QT_QPA_PLATFORM=wayland;xcb
export QT_WAYLAND_DISABLE_WINDOWDECORATION=1
export QT_QPA_PLATFORMTHEME=qt5ct

# Theming
## better than lxappearance and nwg-look
#export GTK_THEME=
export XCURSOR_THEME=Qogir-dark
export XCURSOR_SIZE=24

# Application specific forcing of wayland
export MOZ_ENABLE_WAYLAND=1

# gamescope keyboard layout
export XKB_DEFAULT_LAYOUT=fi
#export PROTON_NO_NTSYNC=1
export PROTON_ENABLE_NVAPI=1

