#!/bin/bash

# Experimental way to "link" files between the OS and the repo.

SCRIPT_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &> /dev/null && pwd)

export SYNC_MODE=$1
export REPO_DIR=$2


SF="$SCRIPT_DIR/../bin/syncfiles"


# shell configs
$SF ~ .bashrc

# gtk
#sf ~ .gtkrc-2.0

#i3
I3_CONFIG=".config/i3"
$SF ~ $I3_CONFIG/{config,workspaces.conf,i3blocks.conf}
$SF ~ $I3_CONFIG/scripts/.



