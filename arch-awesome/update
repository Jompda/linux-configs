#!/bin/bash
set -e


SCRIPT_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &> /dev/null && pwd)
CWD=$(pwd)

cp2cwd() {
  cp $1 "$CWD/"
}

echo "Copying .bashrc"
cp2cwd ~/.bashrc
echo "Copying .zshrc"
cp2cwd ~/.zshrc
echo "Copying .xsession"
cp2cwd ~/.xsession
echo "Copying rc.lua .."
cp2cwd ~/.config/awesome/rc.lua
echo "Copying .p10k.zsh .."
cp2cwd ~/.p10k.zsh
echo "Copying alacritty.toml"
cp ~/.config/alacritty/alacritty.toml "$SCRIPT_DIR"/../software/alacritty/
echo "Copying ranger config"
cp ~/.config/ranger/rc.conf "$SCRIPT_DIR"/../software/ranger/


echo "Creating nvim-kickstart diff.."
cd ~/.config/nvim
git diff >"${SCRIPT_DIR}/../software/nvim/nvim-kickstart-patch.diff"

